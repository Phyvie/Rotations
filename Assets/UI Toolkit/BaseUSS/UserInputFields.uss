.myFloatField {
    margin: 0;
    padding: 0;
    justify-content: space-around;
    align-items: stretch;
    align-self: stretch;
    align-content: stretch;
    flex-direction: row;
    flex-grow: 1;
}

.myFloatField > Label {
    font-size: 12px;
    min-height: auto;
    min-width: auto;
    margin-right: 5px;
    padding: 0;
    border-width: 0;
    border-radius: 0;
    -unity-text-align: middle-center;
}

.myFloatField > #unity-text-input {
    flex-grow: 1;
    margin: 5px;
    padding: 0;
    margin-top: 2px;
    margin-bottom: 2px;
    margin-left: 4px;
    margin-right: 4px;
}

.myFloatField > #unity-text-input > .unity-text-element {
    margin: 5px;
    padding: 1px;
    padding-left: 5px;
}

